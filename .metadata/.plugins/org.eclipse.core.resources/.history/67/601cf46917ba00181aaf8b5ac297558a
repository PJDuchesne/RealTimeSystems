// To allow global configurations (i.e. Master ISR setups)
#include "Includes/GlobalConfig.h"

// To allow the main to set up UART
#include "Includes/UART0_Driver.h"

/**
 * main.cpp
 */
int main(void)
{

	InterruptEnable(UART_INT_RX | UART_INT_TX);
	InterruptMasterEnable();

	UART0_Driver* testPtr = UART0_Driver::GetUART0Driver();

	while(1)
    {
        /* Wait for input data */
        GotData = false;
        while (!GotData) ;
        /* Input data - xmit directly */
        UART0_DR_R = Data;
    }
}
